---
/**
 * SocialIcons.astro
 * Petits boutons ronds avec les logos officiels (SVG inline) LinkedIn & GitHub.
 * - Accessible (aria-label + focus visible)
 * - Thémable (dark mode OK)
 * - Aucun texte visible, juste des icônes
 */
const { lang = 'fr' } = Astro.props;

const t = {
  fr: { li: "Profil LinkedIn d’Alexis Fiska", gh: "GitHub d’Alexis Fiska" },
  en: { li: "Alexis Fiska’s LinkedIn profile", gh: "Alexis Fiska’s GitHub" },
  de: { li: "LinkedIn-Profil von Alexis Fiska", gh: "GitHub von Alexis Fiska" },
  pt: { li: "LinkedIn de Alexis Fiska", gh: "GitHub de Alexis Fiska" },
}[lang] ?? { li: "LinkedIn profile", gh: "GitHub profile" };
---

<div class="flex gap-3">
  <!-- LinkedIn -->
  <a
    href="https://www.linkedin.com/in/alexis-fiska"
    target="_blank"
    rel="noopener noreferrer"
    aria-label={t.li}
    class="group inline-flex h-11 w-11 items-center justify-center rounded-full
           bg-white text-[#0A66C2] ring-1 ring-neutral-200
           hover:ring-[#0A66C2]/40 hover:shadow-sm
           dark:bg-neutral-900 dark:text-[#0A66C2] dark:ring-neutral-800
           focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-[#0A66C2]
           transition"
  >
    <!-- Simple Icons LinkedIn (monochrome), teinté via currentColor -->
    <svg role="img" viewBox="0 0 24 24" class="h-5 w-5" aria-hidden="true">
      <title>LinkedIn</title>
      <path fill="currentColor"
        d="M20.447 20.452h-3.554V14.39c0-1.449-.027-3.317-2.022-3.317-2.022 0-2.331 1.58-2.331 3.214v6.165H8.987V9h3.414v1.561h.049c.476-.9 1.637-1.849 3.372-1.849 3.606 0 4.271 2.372 4.271 5.459v6.281zM5.337 7.433A2.07 2.07 0 1 1 5.34 3.296a2.07 2.07 0 0 1-.003 4.137zM6.777 20.452H3.894V9h2.883v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.225 0z"/>
    </svg>
  </a>

  <!-- GitHub -->
  <a
    href="https://github.com/TaoXAdmin"
    target="_blank"
    rel="noopener noreferrer"
    aria-label={t.gh}
    class="group inline-flex h-11 w-11 items-center justify-center rounded-full
           bg-white text-neutral-900 ring-1 ring-neutral-200
           hover:ring-neutral-400 hover:shadow-sm
           dark:bg-neutral-900 dark:text-white dark:ring-neutral-800
           focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-neutral-500
           transition"
  >
    <!-- Simple Icons GitHub (monochrome), teinté via currentColor -->
    <svg role="img" viewBox="0 0 24 24" class="h-5 w-5" aria-hidden="true">
      <title>GitHub</title>
      <path fill="currentColor"
        d="M12 .297C5.37.297 0 5.67 0 12.297c0 5.302 3.438 9.8 8.205 11.387.6.113.82-.258.82-.577
           0-.285-.01-1.04-.015-2.04-3.338.726-4.042-1.61-4.042-1.61-.546-1.387-1.333-1.758-1.333-1.758
           -1.089-.744.084-.729.084-.729 1.205.084 1.84 1.237 1.84 1.237 1.07 1.835 2.809 1.305 3.495.997
           .108-.775.418-1.305.76-1.605-2.665-.303-5.466-1.333-5.466-5.93 0-1.311.469-2.381 1.236-3.221
           -.124-.303-.536-1.523.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.984-.399 3.003-.404
           1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.655 1.653.243 2.873.119 3.176
           .77.84 1.234 1.91 1.234 3.221 0 4.61-2.807 5.625-5.479 5.921.43.372.814 1.102.814 2.222
           0 1.606-.014 2.896-.014 3.293 0 .322.216.694.825.576C20.565 22.092 24 17.592 24 12.297
           24 5.67 18.627.297 12 .297z"/>
    </svg>
  </a>
</div>
