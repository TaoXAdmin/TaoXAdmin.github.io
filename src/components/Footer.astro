---
const { lang = 'fr' } = Astro.props;
const year = new Date().getFullYear();

// Translation dictionary for footer texts.
const messages = {
  fr: {
    rights: `© ${year} Alexis Fiska. Tous droits réservés.`,
    analytics: 'Ce site utilise Plausible Analytics sans cookies pour mesurer l’audience.',
    linkedin: 'LinkedIn',
    github: 'GitHub',
    email: 'Email',
    x: 'X',
  },
  en: {
    rights: `© ${year} Alexis Fiska. All rights reserved.`,
    analytics: 'This site uses Plausible Analytics without cookies to measure traffic.',
    linkedin: 'LinkedIn',
    github: 'GitHub',
    email: 'Email',
    x: 'X',
  },
  de: {
    rights: `© ${year} Alexis Fiska. Alle Rechte vorbehalten.`,
    analytics: 'Diese Website verwendet Plausible Analytics ohne Cookies zur Reichweitenmessung.',
    linkedin: 'LinkedIn',
    github: 'GitHub',
    email: 'E-Mail',
    x: 'X',
  },
  pt: {
    rights: `© ${year} Alexis Fiska. Todos os direitos reservados.`,
    analytics: 'Este site usa Plausible Analytics sem cookies para medir o tráfego.',
    linkedin: 'LinkedIn',
    github: 'GitHub',
    email: 'Email',
    x: 'X',
  },
};

const t = messages[lang] ?? messages.fr;
---
<footer class="bg-black text-white border-t border-white/10 mt-12">
  <div class="container mx-auto px-4 py-10 text-sm">
    <p class="mb-4 text-white/80">{t.rights}</p>

    <nav class="flex flex-wrap gap-x-6 gap-y-2 mb-4" aria-label="Footer">
      <a
        href="https://www.linkedin.com/in/alexis-fiska"
        target="_blank"
        rel="noopener noreferrer"
        class="text-white/80 hover:text-white underline-offset-4 hover:underline focus:outline-none focus-visible:ring-2 focus-visible:ring-white/40 rounded"
      >{t.linkedin}</a>

      <a
        href="https://github.com/TaoXAdmin"
        target="_blank"
        rel="noopener noreferrer"
        class="text-white/80 hover:text-white underline-offset-4 hover:underline focus:outline-none focus-visible:ring-2 focus-visible:ring-white/40 rounded"
      >{t.github}</a>

      <a
        href="mailto:alexissfiska@gmail.com"
        class="text-white/80 hover:text-white underline-offset-4 hover:underline focus:outline-none focus-visible:ring-2 focus-visible:ring-white/40 rounded"
      >{t.email}</a>

      <a
        href="https://x.com/FiskaAlexis"
        target="_blank"
        rel="noopener noreferrer"
        class="text-white/80 hover:text-white underline-offset-4 hover:underline focus:outline-none focus-visible:ring-2 focus-visible:ring-white/40 rounded"
      >{t.x}</a>
    </nav>

    <p class="text-xs text-white/60 max-w-lg">
      {t.analytics}
    </p>
  </div>
</footer>
