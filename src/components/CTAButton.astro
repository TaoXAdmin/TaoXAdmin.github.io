---
const { href = '#', variant = 'primary', children } = Astro.props;

// Define Tailwind classes for each variant.  The primary button uses
// coloured backgrounds while the ghost button is transparent with a
// border.  Both variants include focus styles for accessibility.
const variants = {
  primary: 'bg-blue-600 text-white hover:bg-blue-700 dark:bg-blue-500 dark:hover:bg-blue-600',
  ghost: 'border border-blue-600 text-blue-600 hover:bg-blue-50 dark:hover:bg-neutral-800',
};

const classes =
  'inline-block px-6 py-3 rounded-md font-medium transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 ' +
  variants[variant];
---
<a href={href} class={classes}>
  <slot />
</a>