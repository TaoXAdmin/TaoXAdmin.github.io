---
interface Props {
  href?: string;
  variant?: 'primary' | 'ghost';
  ariaLabel?: string;
}
const { href = '#', variant = 'primary', ariaLabel } = Astro.props as Props;

const base =
  'inline-flex items-center justify-center gap-2 rounded-lg px-4 py-2 text-sm font-medium focus:outline-none focus-visible:ring';
const variants = {
  primary: `${base} bg-blue-600 text-white hover:bg-blue-700 focus-visible:ring-blue-400`,
  ghost: `${base} bg-transparent text-blue-700 hover:bg-blue-50 dark:text-blue-300 dark:hover:bg-blue-900/20 focus-visible:ring-blue-400`,
} as const;
---
<a href={href} aria-label={ariaLabel} class={variants[variant]}>
  <slot />
</a>
