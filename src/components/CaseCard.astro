---
interface Props {
  title: string;
  description?: string;
  bullets?: string[];
  href?: string;
}
const { title, description, bullets = [], href } = Astro.props as Props;
---
<article class="rounded-2xl border border-white/10 bg-neutral-950 p-5 shadow-lg shadow-black/30">
  <h3 class="text-lg font-semibold text-white tracking-tight">{title}</h3>

  {description && (
    <p class="mt-2 text-white/70">
      {description}
    </p>
  )}

  {bullets.length > 0 && (
    <ul class="mt-3 list-disc pl-5 space-y-1 text-white/70 marker:text-white/30">
      {bullets.map((item: string) => <li>{item}</li>)}
    </ul>
  )}

  {href && (
    <p class="mt-3">
      <a
        href={href}
        class="inline-flex items-center text-white/90 hover:text-white underline-offset-4 hover:underline
               focus:outline-none focus-visible:ring-2 focus-visible:ring-white/40 rounded"
      >
        En savoir plus
      </a>
    </p>
  )}
</article>
