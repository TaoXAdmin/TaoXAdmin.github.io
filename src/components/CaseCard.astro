---
interface Props {
  title: string;
  description?: string;
  bullets?: string[];
  href?: string;
}
const { title, description, bullets = [], href } = Astro.props as Props;
---
<article class="rounded-2xl shadow p-4 bg-white dark:bg-neutral-900">
  <h3 class="text-lg font-semibold">{title}</h3>
  {description && <p class="mt-2 text-neutral-700 dark:text-neutral-300">{description}</p>}
  {bullets.length > 0 && (
    <ul class="mt-3 list-disc pl-5 space-y-1 text-neutral-700 dark:text-neutral-300">
      {bullets.map((item: string) => <li>{item}</li>)}
    </ul>
  )}
  {href && (
    <p class="mt-3">
      <a href={href} class="text-blue-600 hover:underline">En savoir plus</a>
    </p>
  )}
</article>
