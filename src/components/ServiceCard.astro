---
const { title, description, bullets = [] } = Astro.props;
---
<div class="rounded-2xl shadow-lg bg-white dark:bg-neutral-800 p-6 flex flex-col h-full">
  <h3 class="text-lg font-semibold mb-2 text-blue-600 dark:text-blue-400">{title}</h3>
  <p class="mb-4 text-sm text-neutral-700 dark:text-neutral-300 flex-grow">{description}</p>
  {bullets.length > 0 && (
    <ul class="list-disc pl-5 mb-4 text-sm text-neutral-700 dark:text-neutral-300 space-y-1">
      {bullets.map((item) => (
        <li>{item}</li>
      ))}
    </ul>
  )}
</div>