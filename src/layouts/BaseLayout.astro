---
interface Props {
  title?: string;
  description?: string;
  lang?: 'fr' | 'en' | 'de' | 'pt';
  canonical?: string;
}
const { title = 'Alexis Fiska', description = '', lang = 'fr', canonical } = Astro.props as Props;

const site = new URL(import.meta.env.SITE ?? 'https://alexis-fiska.github.io').toString();
const url = canonical ?? new URL(Astro.url.pathname, site).toString();

const structuredData = [
  {
    '@context': 'https://schema.org',
    '@type': 'Person',
    name: 'Alexis Fiska',
    jobTitle: 'Lead QA Automation & GenAI',
    url: site,
    image: `${import.meta.env.BASE_URL ?? '/'}images/profile.jpg`,
    sameAs: ['https://www.linkedin.com/in/alexisfiska', 'https://github.com/alexis-fiska'],
    worksFor: { '@type': 'Organization', name: 'Freelance' },
    areaServed: ['France', 'Remote'],
  },
  {
    '@context': 'https://schema.org',
    '@type': 'Service',
    name: 'QA Automation & GenAI',
    provider: { '@type': 'Person', name: 'Alexis Fiska' },
    areaServed: ['France', 'Remote'],
    offers: {
      '@type': 'Offer',
      priceSpecification: {
        '@type': 'PriceSpecification',
        priceCurrency: 'EUR',
        minPrice: 450,
        price: 450,
      },
      priceCurrency: 'EUR',
      availability: 'https://schema.org/InStock',
    },
  },
];
---
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />

    <title>{title}</title>
    {description && <meta name="description" content={description} />}

    <link rel="canonical" href={url} />
    <link rel="icon" href={`${import.meta.env.BASE_URL ?? '/'}images/favicon.svg`} type="image/svg+xml" />

    {/* Open Graph / Twitter */}
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    {description && <meta property="og:description" content={description} />}
    <meta property="og:url" content={url} />
    <meta property="og:image" content={`${import.meta.env.BASE_URL ?? '/'}images/placeholder_light_gray_block.png`} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    {description && <meta name="twitter:description" content={description} />}

    {/* JSON-LD */}
    <script type="application/ld+json" is:inline set:html={JSON.stringify(structuredData)}></script>

    {/* Plausible */}
    <script
      is:inline
      defer
      data-domain="alexis-fiska.github.io"
      src="https://plausible.io/js/script.js"
    ></script>
  </head>
  <body class="min-h-screen bg-white text-neutral-900 dark:bg-neutral-950 dark:text-neutral-100">
    <a href="#main" class="sr-only focus:not-sr-only focus:absolute focus:top-2 focus:left-2 bg-blue-600 text-white px-3 py-2 rounded">
      Aller au contenu
    </a>
    <slot />
  </body>
</html>
