---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ServiceCard from '../../components/ServiceCard.astro';

const lang = 'en';
const pageTitle = 'Services - Alexis Fiska';
const pageDescription =
  'Consulting in QA automation, CI/CD, k6 performance, GenAI and coaching to speed up releases and cut regressions.';

const services = [
  {
    title: 'Express E2E Audit',
    description:
      'Targeted review of your test pipeline to expose bottlenecks, flakiness and blind spots. Actionable quick wins.',
    bullets: ['Prioritized roadmap (30/60/90d)', 'Stability/time/coverage metrics', 'Clear exec readout'],
    icon: '/images/services/audit.svg',
    href: `/${lang}/contact`,
    ctaLabel: 'Book the audit',
  },
  {
    title: 'QA Framework From Scratch',
    description:
      'Modular BDD framework (Playwright/SpecFlow) tailored to your stack, maintainable and well documented.',
    bullets: ['POM + fixtures + data-builders', 'Stable selectors (data-testid)', 'Docs & reproducible examples'],
    icon: '/images/services/framework.svg',
    href: `/${lang}/cases`,
    ctaLabel: 'See case studies',
  },
  {
    title: 'CI/CD Acceleration',
    description:
      'Make pipelines snappy: parallelization, sharding and focused smoke/sanity strategies for fast feedback.',
    bullets: ['Smart suite partitioning', 'Env & artifact management', 'Actionable reporting'],
    icon: '/images/services/cicd.svg',
    href: `/${lang}/contact`,
    ctaLabel: 'Optimize my pipeline',
  },
  {
    title: 'k6 Performance & Observability',
    description:
      'Usage-based load testing with focused dashboards to prevent performance drift.',
    bullets: ['Realistic scenarios (RPS/users)', 'Grafana dashboards & alerts', 'Bottleneck analysis'],
    icon: '/images/services/perf.svg',
  },
  {
    title: 'GenAI for QA',
    description:
      'Boost QA with assistants: synthetic data generation, log triage and test suggestions.',
    bullets: ['Synthetic datasets', 'Log analysis & summarization', 'Promptable QA tools'],
    icon: '/images/services/genai.svg',
    href: `/${lang}/cases`,
    ctaLabel: 'See examples',
  },
  {
    title: 'Handover & Coaching',
    description:
      'Pragmatic training and katas so your teams become autonomous and keep quality on track.',
    bullets: ['Hands-on sessions & pair testing', 'Targeted katas (UI/API/CI)', 'Support & PR reviews'],
    icon: '/images/services/coaching.svg',
    href: `/${lang}/contact`,
    ctaLabel: 'Train my team',
  },
];

const serviceSchema = {
  '@context': 'https://schema.org',
  '@type': 'Service',
  name: 'QA Automation & GenAI consulting',
  provider: { '@type': 'Person', name: 'Alexis Fiska' },
  areaServed: 'France/Remote',
  priceRange: '€€€',
  offers: { '@type': 'Offer', priceCurrency: 'EUR',
    priceSpecification: { '@type': 'PriceSpecification', minPrice: 450, priceCurrency: 'EUR' } },
};
---
<BaseLayout lang={lang} title={pageTitle} description={pageDescription}>
  <Fragment slot="head">
    <script type="application/ld+json" is:inline set:html={JSON.stringify(serviceSchema)}></script>
  </Fragment>

  <section class="text-center mb-8">
    <h1 class="text-3xl font-bold mb-3">Services</h1>
    <p class="max-w-3xl mx-auto text-neutral-700 dark:text-neutral-300">
      Offers designed to <strong>speed up releases</strong>, <strong>cut regressions</strong> and make quality
      <strong>predictable</strong>.
    </p>
  </section>

  <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 gap-6">
    {services.map((s) => <ServiceCard {...s} />)}
  </div>

  <section class="mt-10 text-center">
    <a href={`/${lang}/contact`} class="inline-flex items-center gap-2 rounded-xl px-4 py-3
       bg-blue-600 text-white hover:bg-blue-700 font-medium">
      Discuss your needs
      <svg width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden="true">
        <path d="M7 17l10-10M17 7H9M17 7v8" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
      </svg>
    </a>
  </section>
</BaseLayout>
