---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ServiceCard from '../../components/ServiceCard.astro';

const lang = 'pt';
const pageTitle = 'Serviços - Alexis Fiska';
const pageDescription =
  'Consultoria em automação de QA, CI/CD, performance k6, GenAI e coaching para acelerar releases e reduzir regressões.';

const services = [
  {
    title: 'Auditoria E2E Express',
    description:
      'Revisão direcionada do pipeline de testes: gargalos, flakiness e lacunas de cobertura. Quick wins acionáveis.',
    bullets: ['Roadmap priorizada (30/60/90d)', 'Métricas de estabilidade/tempo/cobertura', 'Apresentação executiva'],
    icon: '/images/services/audit.svg',
    href: `/${lang}/contact`,
    ctaLabel: 'Agendar auditoria',
  },
  {
    title: 'Framework de QA do Zero',
    description:
      'Framework BDD modular (Playwright/SpecFlow) adaptado ao seu stack, mantível e bem documentado.',
    bullets: ['POM + fixtures + data-builders', 'Selecionadores estáveis (data-testid)', 'Docs e exemplos'],
    icon: '/images/services/framework.svg',
    href: `/${lang}/cases`,
    ctaLabel: 'Ver estudos de caso',
  },
  {
    title: 'Aceleração de CI/CD',
    description:
      'Deixe as pipelines ágeis: paralelização, sharding e smoke/sanity focados para feedback rápido.',
    bullets: ['Particionamento inteligente', 'Gestão de ambientes & artefatos', 'Relatórios acionáveis'],
    icon: '/images/services/cicd.svg',
    href: `/${lang}/contact`,
    ctaLabel: 'Otimizar pipeline',
  },
  {
    title: 'k6 Performance & Observabilidade',
    description:
      'Testes de carga baseados em uso e dashboards focados para evitar deriva de performance.',
    bullets: ['Cenários realistas (RPS/usuários)', 'Dashboards Grafana & alertas', 'Análise de gargalos'],
    icon: '/images/services/perf.svg',
  },
  {
    title: 'GenAI para QA',
    description:
      'Aumente a produtividade: dados sintéticos, triagem de logs e sugestões de testes.',
    bullets: ['Conjuntos de dados sintéticos', 'Análise e resumo de logs', 'Ferramentas “promptáveis” para QA'],
    icon: '/images/services/genai.svg',
    href: `/${lang}/cases`,
    ctaLabel: 'Ver exemplos',
  },
  {
    title: 'Transferência & Coaching',
    description:
      'Treinamento prático e katas para sua equipe se tornar autônoma e manter a qualidade.',
    bullets: ['Sessions hands-on & pair testing', 'Katas (UI/API/CI)', 'Suporte & revisão de PR'],
    icon: '/images/services/coaching.svg',
    href: `/${lang}/contact`,
    ctaLabel: 'Treinar minha equipe',
  },
];

const serviceSchema = {
  '@context': 'https://schema.org',
  '@type': 'Service',
  name: 'QA Automation & GenAI consulting',
  provider: { '@type': 'Person', name: 'Alexis Fiska' },
  areaServed: 'France/Remote',
  priceRange: '€€€',
  offers: { '@type': 'Offer', priceCurrency: 'EUR',
    priceSpecification: { '@type': 'PriceSpecification', minPrice: 450, priceCurrency: 'EUR' } },
};
---
<BaseLayout lang={lang} title={pageTitle} description={pageDescription}>
  <Fragment slot="head">
    <script type="application/ld+json" is:inline set:html={JSON.stringify(serviceSchema)}></script>
  </Fragment>

  <section class="text-center mb-8">
    <h1 class="text-3xl font-bold mb-3">Serviços</h1>
    <p class="max-w-3xl mx-auto text-neutral-700 dark:text-neutral-300">
      Ofertas para <strong>acelerar releases</strong>, <strong>reduzir regressões</strong> e tornar a qualidade
      <strong>previsível</strong>.
    </p>
  </section>

  <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 gap-6">
    {services.map((s) => <ServiceCard {...s} />)}
  </div>

  <section class="mt-10 text-center">
    <a href={`/${lang}/contact`} class="inline-flex items-center gap-2 rounded-xl px-4 py-3
       bg-blue-600 text-white hover:bg-blue-700 font-medium">
      Falar sobre sua necessidade
      <svg width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden="true">
        <path d="M7 17l10-10M17 7H9M17 7v8" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
      </svg>
    </a>
  </section>
</BaseLayout>
