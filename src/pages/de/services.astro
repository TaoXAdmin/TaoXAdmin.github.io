---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ServiceCard from '../../components/ServiceCard.astro';

const lang = 'de';
const pageTitle = 'Leistungen - Alexis Fiska';
const pageDescription =
  'Beratung zu QA-Automatisierung, CI/CD, k6-Performance, GenAI und Coaching. Gemacht, um Ihre Releases zu beschleunigen und Regressionen zu reduzieren.';

const BASE = import.meta.env.BASE_URL ?? '/';

const services = [
  {
    title: 'Express-Audit E2E',
    description:
      'Gezielte Analyse Ihrer Test-Pipeline, um Engpässe, Flakiness und blinde Flecken aufzudecken. Quick Wins priorisiert.',
    bullets: [
      'Priorisierter Bericht & 30/60/90-Tage-Roadmap',
      'Metriken (Stabilität, Zeit, Abdeckung)',
      'Klare Rückmeldung an die Teams',
    ],
    icon: '/images/services/audit.svg',
    href: `/${lang}/contact`,
    ctaLabel: 'Audit planen',
    ctaVariant: 'outlineGold',
  },
  {
    title: 'QA-Framework von Grund auf',
    description:
      'Aufbau eines modularen BDD-Frameworks (Playwright/SpecFlow), passend zu Ihrem Stack – wartbar und dokumentiert.',
    bullets: [
      'POM-Architektur + Fixtures + Data-Builder',
      'Stabile Selektoren (data-testid)',
      'Doku & reproduzierbare Beispiele',
    ],
    icon: '/images/services/framework.svg',
    href: `/${lang}/cases`,
    ctaLabel: 'Fallstudien ansehen',
    ctaVariant: 'outlineGold',
  },
  {
    title: 'CI/CD-Beschleunigung',
    description:
      'Pipelines verschlanken: Parallelisierung, Sharding, Smoke/Sanity-Strategien für ultraschnelles Feedback.',
    bullets: [
      'Intelligente Suite-Partitionierung',
      'Umgebungs- & Artefakt-Management',
      'Umsetzbares Reporting',
    ],
    icon: '/images/services/cicd.svg',
    href: `/${lang}/contact`,
    ctaLabel: 'Pipeline optimieren',
    ctaVariant: 'outlineGold',
  },
  {
    title: 'k6-Performance & Observability',
    description:
      'k6-Last basierend auf realer Nutzung und fokussierten Dashboards, um Performance-Drift zu verhindern.',
    bullets: [
      'Realistische Szenarien (RPS/User-Pacing)',
      'Grafana-Dashboards & Alarme',
      'Engpassanalyse & Empfehlungen',
    ],
    icon: '/images/services/perf.svg',
  },
  {
    title: 'GenAI für QA',
    description:
      'QA beschleunigen mit Assistenten: Datensatz-Generierung, Log-Triage und Test-Vorschläge.',
    bullets: [
      'Synthetische Datensätze',
      'Log-Analyse & Zusammenfassung',
      'Prompt-fähige Tools für QA',
    ],
    icon: '/images/services/genai.svg',
  },
  {
    title: 'Wissenstransfer & Coaching',
    description:
      'Pragmatisches Training und Katas, damit Ihre Teams autonom werden und den Qualitätsfokus halten.',
    bullets: [
      'Hands-on-Sessions & Pair Testing',
      'Gezielte Katas (UI/API/CI)',
      'Support & PR-Reviews',
    ],
    icon: '/images/services/coaching.svg',
    href: `/${lang}/contact`,
    ctaLabel: 'Team schulen',
    ctaVariant: 'outlineGold',
  },
];

const serviceSchema = {
  '@context': 'https://schema.org',
  '@type': 'Service',
  name: 'Beratung für QA-Automatisierung & GenAI',
  provider: { '@type': 'Person', name: 'Alexis Fiska' },
  areaServed: 'France/Remote',
  priceRange: '€€€',
  offers: {
    '@type': 'Offer',
    priceCurrency: 'EUR',
    priceSpecification: { '@type': 'PriceSpecification', minPrice: 450, priceCurrency: 'EUR' },
  },
};
---
<BaseLayout lang={lang} title={pageTitle} description={pageDescription}>
  <Fragment slot="head">
    <script type="application/ld+json" is:inline set:html={JSON.stringify(serviceSchema)}></script>
  </Fragment>

  <!-- HERO section -->
  <section class="text-center mb-8 relative overflow-hidden rounded-2xl bg-neutral-950 border border-white/10 px-6 py-10">
    <div aria-hidden="true" class="pointer-events-none absolute inset-0
         [background:radial-gradient(80%_120%_at_50%_-20%,rgba(255,255,255,.06),transparent_70%),linear-gradient(120deg,transparent,rgba(214,179,106,.10),transparent)]"></div>

    <div class="relative">
      <h1 class="text-3xl font-bold mb-3 text-white">
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-white to-[#D6B36A]">Leistungen</span>
      </h1>
      <p class="max-w-3xl mx-auto text-white/70">
        Angebote, die <strong>Ihre Releases beschleunigen</strong>, <strong>Regressionen reduzieren</strong>
        und Qualität <strong>planbar</strong> machen.
      </p>
    </div>
  </section>

  <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 gap-6">
    {services.map((s) => <ServiceCard {...s} />)}
  </div>

  <section class="mt-10 text-center">
    <a
      href={`/${lang}/contact`}
      class="inline-flex items-center gap-2 rounded-xl px-4 py-3 font-medium
             border border-[#D6B36A80] text-white bg-transparent
             hover:bg-[#D6B36A14] active:bg-[#D6B36A20]
             focus:outline-none focus-visible:ring-2 focus-visible:ring-white/40 transition-colors"
    >
      Bedarf besprechen
      <svg width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden="true" class="shrink-0">
        <path d="M7 17l10-10M17 7H9M17 7v8" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
      </svg>
    </a>
  </section>
</BaseLayout>
